package com.sviatlana.customerException;

public class theException extends Exception{

    public String zeroProhibited(){
        return "Price should not be in negative, you are entered" +price;
    }
    
	 private int ex;
	 MyException(int a)
	 {
	  ex=a;
	 }
	 public String toString()
	 {
	  return "MyException[" + ex +"] is less than zero";
	 }

}
