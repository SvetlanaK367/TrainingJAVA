package com.sviatlana.arrayWork.util;

public class IsMultipleOf {
	
	public static boolean multipleOf(short x, int numerator) {
	    return (( x >> 15 ) & 1) == 0;
	}

	public static boolean multipleOf(int x, int numerator) {
		int remainder  = x % numerator; 
		return remainder == 0;
	}

	public static boolean multipleOf(long x, int numerator) {
	    return (( x >> 63 ) & 1) == 0;
	}

}
