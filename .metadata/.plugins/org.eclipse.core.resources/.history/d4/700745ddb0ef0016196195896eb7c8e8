package com.sviatlana.shapeCalculation.customerException;

public class TheException extends Exception{

    public String zeroProhibited(){
        return "The value should be integer. Please try again.";
    }
	    
    public String intAllowedOnly(){
        return "The value should be integer. Please try again.";
    }   
	    
    public String doubleAllowedOnly(){
        return "The value should be real. Please try again.";
    }    

}
