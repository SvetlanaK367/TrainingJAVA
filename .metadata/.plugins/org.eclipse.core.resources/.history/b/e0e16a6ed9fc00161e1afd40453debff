		public boolean existPublicationType(PublicationTypes pType) {
			for (PublicationTypes itemType : PublicationTypes.values()) {
				if(itemType == pType) {
					return true;
				}
			}
			return false;
		}*/
		/*
		@Override
		public boolean existPublicationType(PublicationTypes pType) {
			return EnumSet.allOf(PublicationTypes.class).contains(pType);
		} */
	

}
