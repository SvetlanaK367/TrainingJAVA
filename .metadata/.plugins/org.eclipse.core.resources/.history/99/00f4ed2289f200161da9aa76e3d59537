package com.sviatlana.arrayWork.util;

import java.util.List;

import com.sviatlana.arrayWork.util.CustomException;

public class SumArrayNumbers {

	public static int sumCalculation(List<String> sourceArray) throws CustomException {
		String strElement = null;
		int result = 0;
		
		for(int i = 0; i < sourceArray.size(); i++)
		{
			strElement = (String) sourceArray.get(i);
			try {
				result += Integer.parseInt(strElement);
		    } catch (NumberFormatException ex) {
		    	throw new CustomException("" + (i + 1) + " = " + strElement + "; ");
		    }
		}
	
		return result;
	}
}
